<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/OrdersList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{ordersHome.wire}"/>

   <param name="ordersFrom"/>
   <param name="ordersId" value="#{ordersHome.ordersId}"/>
   <param name="deliveryTypesFrom"/>
   <param name="deliveryTypesId" value="#{deliveryTypesHome.deliveryTypesId}"/>

   <param name="paymentTypesFrom"/>
   <param name="paymentTypesId" value="#{paymentTypesHome.paymentTypesId}"/>

   <param name="registeredUserFrom"/>
   <param name="registeredUserId" value="#{registeredUserHome.registeredUserId}"/>
   <param name="addressesFrom"/>
   <param name="addressesId" value="#{addressesHome.addressesId}"/>

   <param name="usersFrom"/>
   <param name="usersId" value="#{usersHome.usersId}"/>
   <param name="administratorsFrom"/>
   <param name="administratorsId" value="#{administratorsHome.administratorsId}"/>





   <navigation from-action="#{ordersHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Orders.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{ordersHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Orders.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{ordersHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/OrdersList.xhtml"/>
      </rule>
   </navigation>

</page>
