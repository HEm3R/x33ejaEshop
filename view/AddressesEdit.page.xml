<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/AddressesList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{addressesHome.wire}"/>

   <param name="addressesFrom"/>
   <param name="addressesId" value="#{addressesHome.addressesId}"/>


   <navigation from-action="#{addressesHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Addresses.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{addressesHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Addresses.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{addressesHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/AddressesList.xhtml"/>
      </rule>
   </navigation>

</page>
